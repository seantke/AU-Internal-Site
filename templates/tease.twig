{% block content %}
    <div class="row list-group-item">
        <div class="col-md-4">
            <a href="{{post.guid}}">
                <h4>{{post.title}}</h4>
            </a>
        </div>
        <div class="col-md-4">
            <p>{{post.get_preview(15, false, false)}}</p>
        </div>
        <div class="col-md-4">
            Posted:
            {{ post.post_date|date("D F d Y H:i ")}}
            <br>
            Modified:
            {{ post.post_modified|date("D F d Y H:i ")}}
        </div>
    </div>
{% endblock %}
