{% extends "base.twig" %}

{% block content %}
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <a href="{{post.url}}"><img alt="{{post.title}}" src="{{TimberImage(post.image).guid}}">
        </a>
        <a href="{{post.url}}" class="btn btn-default open-btn">{{post.title}}</a>
        <p>{{post.content}}</p>
        <p class="blog-author">
            <span>By</span>
            <a href="{{post.author.path}}">{{ post.author.name }}</a>
            <span>&bull;</span>{{ post.post_date|date}}</p>
    </article>
{% endblock %}
